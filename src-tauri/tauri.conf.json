{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ebb",
  "version": "0.1.0",
  "identifier": "com.ebb.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Ebb",
        "width": 950,
        "height": 675,
        "minWidth": 950,
        "minHeight": 675,
        "hiddenTitle": true,
        "titleBarStyle": "Transparent",
        "backgroundColor": "#FCF8EDCC"
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost; media-src 'self' asset: http://asset.localhost; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["ebb"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "icons/tray.png",
      "notifications/html/*",
      "notifications/sounds/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": ["./target/libMacMonitor.dylib"]
    }
  }
}
