{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ebb",
  "version": "0.1.0",
  "identifier": "com.ebb.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Ebb",
        "width": 950,
        "height": 675,
        "minWidth": 950,
        "minHeight": 675,
        "hiddenTitle": true,
        "titleBarStyle": "Transparent",
        "backgroundColor": "#FCF8EDCC"
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["ebb"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "icons/tray.png",
      "notifications/html/notification-session-start.html",
      "notifications/html/notification-session-end.html",
      "notifications/html/notification-session-warning.html",
      "notifications/html/notification-blocked-app.html",
      "notifications/sounds/session_start.mp3",
      "notifications/sounds/session_end.mp3",
      "notifications/sounds/session_warning.mp3",
      "notifications/sounds/app_blocked.mp3"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": ["./target/libMacMonitor.dylib"]
    }
  }
}
